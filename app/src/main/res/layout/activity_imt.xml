<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".ui.imt.ImtActivity">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rdpria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button_left_selector"
            android:button="@android:color/transparent"
            android:checked="true"
            android:drawableLeft="@drawable/ic_pria"
            android:gravity="center"
            android:onClick="onRadioButtonClicked"
            android:textColor="@android:color/white" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rdwanita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:textColor="@android:color/holo_red_light"
            android:drawableLeft="@drawable/ic_wanita"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_button_right_selector"/>

    </RadioGroup>

    <Button
        android:visibility="gone"
        android:id="@+id/btnwanita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="wanita"/>

    <Button
        android:visibility="gone"
        android:id="@+id/btnpria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pria" />

    <EditText
        android:id="@+id/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="height"
        android:inputType="number|numberDecimal"
        android:text="" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="weight"
        android:inputType="number|numberDecimal"
        android:text="" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALCULATE" />

    <TextView
        android:id="@+id/result"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/lingkarPinggang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Masukkan ukuran lingkar pinggang anda"
        android:inputType="number|numberDecimal"
        android:text=""
        />
    <Button
        android:id="@+id/calculateLingkarPinggang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALCULATE"/>

</LinearLayout>